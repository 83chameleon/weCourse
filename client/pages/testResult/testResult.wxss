.bar-box{
  width: 250rpx;
  height: 220rpx;
  margin: 0 20rpx;
  display: inline-block;
}

.radio-group{
  width: 450rpx;
  display: inline-block;
  margin: 0 0 10rpx 0;
}

ec-canvas{
  width: 100%;
  height: 100%;
}

.right-answer{
  color: blue;
  font-weight: 500;
}

.wrong-answer{
  color: red
}

.radio-part{
  margin: 0 10rpx 10rpx 50rpx;
  width: 300rpx;
}

.score-part{
  font-size: 30rpx;
  width: 720rpx;
  margin: 10rpx 0;
}

.score-list{
  width: 700rpx;
  height: 50rpx;
}

.score-list-part{
  border-top: 1rpx #bbb dashed;
  margin: 10rpx 0;
}

.score-list-title{
  font-size: 32rpx;
  font-weight: 500;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 80rpx;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 80rpx;
  align-items: center;
}



.title{
  margin: 20rpx 0;
  width: 100%;
  border-bottom: 1rpx #bbb solid;
}

.chapter-title{
  font-size: 30rpx;
  padding: 10rpx 0rpx 10rpx 30rpx;
}

.last-count{
  float: right;
  margin-right: 30rpx;
}

.teacher-pane,.student-pane{
  width: 100%;
}

.time-title{
  font-size:32rpx;
  padding-top:5rpx;
  float: right;
  margin-right: 40rpx;
  overflow: hidden;
}

.rest-time{
  font-size: 32rpx;
  float: right;
}

.picker{
  background-color: #ddd;
  margin: 10rpx 0;
  padding: 20rpx;
}

.start-test{
  width: 100%;
}

.test{
  width: 100%;
}

.radio-main{
  border-top: 1rpx #bbb dashed;
  font-size: 32rpx;
  margin: 5rpx 30rpx;
}

.radio-choose{
  font-size: 30rpx;
}